.search {
  position: fixed;
  margin-top: 30rpx;
  width: 100%;
  background-color: white;
}
page{ height:100%;}
.search input {
  width: 93%;
  height: 35px;
  border-radius: 5px;
  border: 1px solid #888;
  padding-left: 10px;
  box-sizing: border-box;
  margin: 0 auto;
}

.search icon {
  position: absolute;
  top: 7rpx;
  right: 45rpx;
  color: #888;
  z-index: 99;
}

.noContent {
  height: 800rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.news-box::before {
  content: '';
  display: block;
  height: 115rpx;
}

.load_more {
  width: 65%;
  margin: 20rpx auto;
  font-size: 14px;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.load_loading {
  margin: 0 5px;
  width: 40rpx;
  height: 40rpx;
  /* display: inline-block;
  vertical-align: middle; */
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.load_tips {
  display: inline-block;
  vertical-align: middle;
}

.load_end {
  width: 65%;
  margin: 20rpx auto;
  font-size: 14px;
  text-align: center;
}
