/**my.wxss**/

.userinfo {
  width: 100%;
  height: 180px;
  background: #dd3635;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo-avatar {
  width: 158rpx;
  height: 158rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.usermotto {
  margin-top: 50rpx;
  width: 100%;
}

.person-collect {
  padding: 0px 30px;
  width: 100%;
  height: 45px;
  background: #ddd;
  line-height: 45px;
  font-size: 20px;
  color: white;
  box-sizing: border-box;
}

.logout {
  width: 100%;
  margin-top: 100px;
  text-align: center;
}

.logout button {
  width: 200px;
  height: 30px;
  border-radius: 5px;
  background: #dd3635;
  outline: 0;
  border: 0;
  color: white;
}
